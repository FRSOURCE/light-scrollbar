{
  "name": "@frsource/light-scrollbar",
  "description": "Minimalistic plugin to create custom scrollbars! ðŸ’ª",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "unpkg": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "sass": "src/index.scss",
  "styles": "dist/index.css",
  "scripts": {
    "start": "yarn clean && microbundle --no-compress --no-sourcemap --format=umd watch --tsconfig tsconfig.build.json",
    "build": "yarn clean && yarn minify-data && microbundle --compress --tsconfig tsconfig.build.json && yarn copy-tmp-to-src && yarn clean:tmp && yarn restore-index",
    "build-backup": "yarn clean && microbundle --compress --tsconfig tsconfig.build.json",
    "lint": "yarn lint.script",
    "lint.fix": "yarn lint.script.fix",
    "lint.script": "eslint . --ext .js,.ts,.vue",
    "lint.script.fix": "yarn lint.script --fix",
    "lint.ci": "yarn lint.script --max-warnings 0",
    "prettify": "prettier --write src",
    "prettify.ci": "prettier --check src",
    "cy": "concurrently \"yarn dev-server\" \"yarn start\" \"cypress open\"",
    "cy.ci": "concurrently --kill-others --success first \"yarn dev-server\" \"yarn cypress run --headless\"",
    "release": "semantic-release",
    "release.ci": "yarn release --yes",
    "release.test": "yarn release --no-git-tag-version --no-push --skip-npm",
    "clean": "rimraf dist/**/*",
    "minify-data": "node scripts/replace.js",
    "copy-tmp-to-src": "cpy index_tmp.ts src",
    "restore-index": "renamer --find index_tmp.ts --replace index.ts 'src/**'",
    "clean:tmp": "rimraf src/index.ts && rimraf index_tmp.ts",
    "dev-server": "http-server -p 3000"
  },
  "homepage": "https://github.com/FRSOURCE/light-scrollbar/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FRSOURCE/light-scrollbar.git"
  },
  "keywords": [
    "custom scrollbar",
    "light scrollbar",
    "lightweight",
    "simple",
    "every browser"
  ],
  "bugs": {
    "url": "https://github.com/FRSOURCE/light-scrollbar/issues"
  },
  "author": "Szymon DziewoÅ„ski <szymondziewonski@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@frsource/frs-replace": "3.0.3",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.4",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.27.0",
    "concurrently": "7.2.1",
    "cpy-cli": "4.1.0",
    "cypress": "9.7.0",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "http-server": "14.1.0",
    "incstr": "1.2.3",
    "microbundle": "0.14.2",
    "prettier": "2.6.2",
    "renamer": "4.0.0",
    "sass": "1.51.0",
    "semantic-release": "^19.0.2",
    "ts-essentials": "9.1.2",
    "typescript": "4.7.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@frsource/frs-hide-scrollbar": "^2.0.7"
  },
  "version": "1.3.2"
}
